{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentWidth": 2,
		"lineWidth": 100,
		"attributePosition": "auto"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "info"
			},
			"correctness": {
				"noChildrenProp": "off",
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "info",
					"fix": "safe",
					"options": {
						"attributes": ["class", "classList"],
						"functions": ["cva", "tw"]
					}
				}
			}
		}
	},
	// "css": {
	// 	"formatter": {
	// 		"enabled": true
	// 	},
	// 	"linter": {
	// 		"enabled": true
	// 	},
	// 	"parser": {
	// 		"cssModules": true
	// 	}
	// },
	"files": {
		"ignore": [
			".vscode/**",
			".turbo/**",
			".vinxi/**/*",
			".output/**/*",
			"playwright-report/**/*",
			"test-results/**/*",
			"svg-icons.d.ts"
		]
	},
	"overrides": [
		{
			"include": ["*.json", ".*rc"],
			"json": { "formatter": { "trailingCommas": "none" } }
		}
	]
}
