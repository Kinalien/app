		"drizzle-orm": "0.42.0",
		"hono": "^4.7.7",
		"pg": "8.14.1"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.0.8",
		"@hono/vite-build": "^1.5.0",
		"drizzle-kit": "0.31.0",
		"vite": "^6.1.1",
		"vite-plugin-ssr-hot-reload": "^0.5.0",
		"wrangler": "^4.4.0"
	}
}
